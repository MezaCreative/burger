<link  href="../public/assets/css/style.css">
<h1>Eat-Da-Burger!</h1>

<h2> Burgers available!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2 class="devoured" >  Burgers that have been devoured!</h2>

<ul class="devouredBurgs">
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class = "create-form">

    <div class="form-group">
        <label for ="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
        <label for"devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured! <br>
        <input type="radio" name="devoured" value="0"> Available 
    </div>

    <button type ="submit"> Add Burger </button>
</form>